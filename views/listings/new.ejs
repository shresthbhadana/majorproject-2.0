
<% layout("/layouts/boilerplate") %>
<body>
    
     <div class="row">
            <div class="col-8 offset-2" >
                <br><br>
    <h3>create new listing</h3>
    <ul>
        
        
                
 <form  method="post" action = "/listings"  class="needs-validation" novalidate enctype="multipart/form-data"> 
    <div class="mb-3">
        <label for="title" class="form-label">title</label>
        <input type="text"
        name="listing[title]"
        placeholder="add  a catchy title"
        required
        class="form-control">
        <div class="valid-feedback">title looks good</div>
 </div>
   <div class="mb-3">
 <label for="description" class="form-label">description</label>
    <textarea name="listing[description]"  required
     class="form-control" 
    ></textarea>
    <div class="invalid-feedback">please enter a short discription</div>
    </div>
   
    
    <div class="mb-3">
        <label for="image" class="form-label"> upload image</label>
    <input type="file" 
     name = "listing[image]" class="form-control" required>
    </div>
    <div class="row">

    <div class="mb-3 col-md-4">
        <label for="number" class="form-label">price</label>
    <input type="text" placeholder="1500" name="listing[price]" required min="1" class="form-control" >
    <div class="invalid-feedback">please enter a valid price</div>
    </div>
    <div class="mb-3 col-md-8">
        <label for="country" class="form-label">country</label>
    <input type="text" placeholder="india" name="listing[country]" required class="form-control" >
    <div class="invalid-feedback">please enter a valid country</div>
    </div>
    </div>
    
    <div class="mb-3">
        <label for="location" class="form-label">location</label>
    <input type="text" placeholder="meerut,uttarpradesh" name="listing[location]" required class="form-control" >
    <div class="invalid-feedback">please enter a valid location</div>
    </div>
    
    
    <br><br>
    <button class="btn btn-dark add-btn">add</button>
<br><br>
</form>

</div>
</div>
    </ul>
</body>
